---
import { siteConfig } from '../data/site.config';
---
<section id="contact" class="section-padding bg-surface-dim">
  <div class="max-w-3xl mx-auto">
    <div class="text-center mb-10 animate-on-scroll">
      <span class="inline-block font-display text-gold-500 text-sm font-bold uppercase tracking-widest mb-3">
        Get in Touch
      </span>
      <h2 class="font-display text-3xl md:text-4xl font-bold text-navy-900 mb-4">
        Contact Us
      </h2>
      <p class="text-gray-600 max-w-lg mx-auto">
        Have a tip, story idea, or question? We'd love to hear from you.
      </p>
    </div>

    <div class="bg-white rounded-3xl p-6 sm:p-8 md:p-10 shadow-sm border border-gray-100 animate-on-scroll" style="animation-delay: 0.1s;">
      <form id="contact-form" class="space-y-5" enctype="multipart/form-data">
        <!-- Honeypot -->
        <div class="absolute -left-[9999px]" aria-hidden="true">
          <label for="website">Website</label>
          <input type="text" id="website" name="website" tabindex="-1" autocomplete="off" />
        </div>

        <!-- Name -->
        <div>
          <label for="contact-name" class="block text-sm font-semibold text-navy-900 mb-2">Name</label>
          <input
            type="text"
            id="contact-name"
            name="name"
            required
            placeholder="Your full name"
            class="w-full px-4 py-3 rounded-xl border border-gray-200 bg-gray-50 text-navy-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gold-400 focus:border-transparent transition-all text-sm"
          />
        </div>

        <!-- Email -->
        <div>
          <label for="contact-email" class="block text-sm font-semibold text-navy-900 mb-2">Email</label>
          <input
            type="email"
            id="contact-email"
            name="email"
            required
            placeholder="your@email.com"
            class="w-full px-4 py-3 rounded-xl border border-gray-200 bg-gray-50 text-navy-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gold-400 focus:border-transparent transition-all text-sm"
          />
        </div>

        <!-- Message -->
        <div>
          <label for="contact-message" class="block text-sm font-semibold text-navy-900 mb-2">Message</label>
          <textarea
            id="contact-message"
            name="message"
            required
            rows="5"
            placeholder="Your message..."
            class="w-full px-4 py-3 rounded-xl border border-gray-200 bg-gray-50 text-navy-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gold-400 focus:border-transparent transition-all text-sm resize-y"
          ></textarea>
        </div>

        <!-- File Upload -->
        <div>
          <label for="contact-file" class="block text-sm font-semibold text-navy-900 mb-2">
            Attachment <span class="text-gray-400 font-normal">(optional · images only)</span>
          </label>
          <div class="relative">
            <input
              type="file"
              id="contact-file"
              name="attachment"
              accept="image/*"
              class="w-full text-sm text-gray-500 file:mr-4 file:py-2.5 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-navy-50 file:text-navy-700 hover:file:bg-navy-100 file:cursor-pointer transition-all"
            />
          </div>
        </div>

        <!-- Submit -->
        <button
          type="submit"
          id="contact-submit"
          class="w-full inline-flex items-center justify-center gap-2 bg-gradient-to-r from-navy-800 to-navy-900 text-white font-display font-bold text-base uppercase tracking-wider px-8 py-4 rounded-xl hover:from-navy-700 hover:to-navy-800 transition-all hover:shadow-xl hover:-translate-y-0.5 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
          </svg>
          Send Message
        </button>

        <!-- Status message -->
        <div id="form-status" class="hidden text-center py-3 px-4 rounded-xl text-sm font-medium"></div>
      </form>

      <!-- Direct email -->
      <div class="mt-6 pt-6 border-t border-gray-100 text-center">
        <p class="text-sm text-gray-500">
          Or email us directly at
          <a href={`mailto:${siteConfig.contact.email}`} class="text-navy-600 hover:text-gold-600 font-semibold transition-colors">
            {siteConfig.contact.email}
          </a>
        </p>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const status = document.getElementById('form-status') as HTMLDivElement;
  const submitBtn = document.getElementById('contact-submit') as HTMLButtonElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Honeypot check
    const honeypot = form.querySelector('[name="website"]') as HTMLInputElement;
    if (honeypot?.value) return;

    submitBtn.disabled = true;
    submitBtn.textContent = 'Sending...';
    status.classList.add('hidden');

    const formData = new FormData(form);

    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        body: formData,
      });

      const result = await response.json();

      if (response.ok) {
        status.textContent = '✓ Message sent successfully! We\'ll get back to you soon.';
        status.className = 'text-center py-3 px-4 rounded-xl text-sm font-medium bg-green-50 text-green-700 border border-green-200';
        form.reset();
      } else {
        throw new Error(result.error || 'Failed to send message');
      }
    } catch (error: any) {
      status.textContent = `✕ ${error.message || 'Something went wrong. Please try again or email us directly.'}`;
      status.className = 'text-center py-3 px-4 rounded-xl text-sm font-medium bg-red-50 text-red-700 border border-red-200';
    } finally {
      submitBtn.disabled = false;
      submitBtn.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" /></svg> Send Message';
    }
  });
</script>
